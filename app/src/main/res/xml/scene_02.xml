<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@+id/start"
        motion:duration="800"
        motion:motionInterpolator="linear">

        <OnClick
            motion:clickAction="transitionToEnd"
            motion:targetId="@+id/button" />

        <KeyFrameSet>
            <KeyAttribute
                android:elevation="8dp"
                android:scaleX="2"
                android:scaleY="2"
                motion:framePosition="100"
                motion:motionTarget="@+id/button" />

            <KeyAttribute
                android:scaleY="2"
                motion:transitionEasing="500"
                motion:framePosition="100"
                motion:motionTarget="@+id/text" />
        </KeyFrameSet>
    </Transition>

    // Reverse anim
    <Transition
        motion:constraintSetEnd="@+id/start"
        motion:constraintSetStart="@+id/end"
        motion:duration="800"
        motion:motionInterpolator="linear">

<!--        <OnSwipe-->
<!--            motion:dragDirection="dragRight"-->
<!--            motion:touchAnchorId="@+id/text"-->
<!--            motion:touchAnchorSide="left" />-->

        <OnClick
            motion:clickAction="transitionToStart"
            motion:targetId="@+id/text" />

        <KeyFrameSet>
            <KeyAttribute
                android:elevation="0dp"
                android:scaleX="1"
                android:scaleY="1"
                motion:framePosition="100"
                motion:motionTarget="@+id/button" />

            <KeyAttribute
                android:scaleY="1"
                motion:framePosition="100"
                motion:motionTarget="@+id/text" />
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/text"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="20dp"
            motion:layout_constraintEnd_toEndOf="@+id/button"
            motion:layout_constraintStart_toStartOf="@+id/button"
            motion:layout_constraintBottom_toBottomOf="parent">
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/text"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginEnd="20dp"
            motion:layout_constraintEnd_toEndOf="@+id/button"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent">
        </Constraint>
    </ConstraintSet>

</MotionScene>